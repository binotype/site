{
	"name": "@binotype/site",
	"version": "0.4.0",
	"license": "MIT",
	"private": false,
	"description": "Component library for building Binotype web sites.",
	"engines": {
		"node": "^20.17.0 || >=22.0.0",
		"npm": ">=10.0.0"
	},
	"main": "dist/index.cjs.js",
	"module": "dist/index.js",
	"es2015": "dist/esm/index.js",
	"es2017": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"collection": "dist/collection/collection-manifest.json",
	"collection:main": "dist/collection/index.js",
	"unpkg": "dist/binotype-site/binotype-site.esm.js",
	"exports": {
		".": {
			"default": "./dist/index.mjs",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs.js",
			"types": "./dist/types/index.d.ts"
		},
		"./components/*.js": {
			"import": "./dist/components/*.js",
			"types": "./dist/types/components/*.d.ts"
		},
		"./components": {
			"default": "./dist/index.js",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs.js",
			"types": "./dist/types/components.d.ts"
		},
		"./hydrate": {
			"default": "./dist/hydrate/index.mjs",
			"import": "./dist/hydrate/index.mjs",
			"require": "./dist/hydrate/index.js",
			"types": "./dist/hydrate/index.d.ts"
		},
		"./loader": {
			"default": "./dist/loader/index.js",
			"import": "./dist/loader/index.js",
			"require": "./dist/loader/index.cjs",
			"types": "./dist/loader/index.d.ts"
		}
	},
	"files": [
		"dist/"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/binotype/site.git"
	},
	"bugs": {
		"url": "https://github.com/binotype/site/issues"
	},
	"homepage": "https://github.com/binotype/site/",
	"scripts": {
		"build": "stencil build",
		"start": "stencil build --dev --watch --serve",
		"test": "vitest --run",
		"test.watch": "vitest --watch",
		"generate": "stencil generate",
		"lint": "eslint src --ext .ts,.tsx",
		"format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
		"verify": "npm run lint && npm run build && npm run test"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.3",
		"@eslint/js": "^9.39.2",
		"@stencil/core": "4.42.0",
		"@stencil/sass": "3.2.3",
		"@types/node": "25.2.0",
		"@types/showdown": "^2.0.6",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"@vitest/browser": "^4.0.18",
		"@vitest/browser-webdriverio": "^4.0.18",
		"@vitest/coverage-istanbul": "^4.0.18",
		"eslint": "^9.39.2",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"happy-dom": "^20.5.0",
		"jsdom": "^28.0.0",
		"prettier": "^3.8.1",
		"sass": "1.97.3",
		"stencil-inline-svg": "1.1.0",
		"stencil-router-v2": "^0.6.0",
		"typescript": "5.9.3"
	},
	"dependencies": {
		"isly": "^1.5.0",
		"isoly": "^3.1.7",
		"tidily": "^0.2.7",
		"tslib": "2.8.1",
		"unplugin-stencil": "^0.4.1",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"webdriverio": "^9.23.3"
	}
}
