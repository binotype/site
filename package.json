{
	"name": "@binotype/site",
	"version": "0.0.1-dev",
	"license": "MIT",
	"description": "Component library for building Binotype web sites.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/binotype/site.git"
	},
	"bugs": {
		"url": "https://github.com/binotype/site/issues"
	},
	"homepage": "https://github.com/binotype/site/",
	"private": false,
	"type": "module",
	"main": "dist/index.cjs.js",
	"collection": "dist/collection/collection-manifest.json",
	"scripts": {
		"build": "stencil build",
		"start": "stencil build --dev --watch --serve",
		"test": "vitest --run --allowOnly",
		"coverage": "vitest --coverage",
		"generate": "stencil generate",
		"lint": "eslint 'src/**/*.{js,ts,tsx}'",
		"fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
		"clean": "rm -rf .stencil/ dist/ node_modules/ loader/ www/",
		"test:browser": "vitest --config=vitest.browser.config.ts"
	},
	"dependencies": {
		"isly": "^1.4.0",
		"isoly": "^3.1.3",
		"showdown": "^2.1.0",
		"tidily": "^0.2.6"
	},
	"devDependencies": {
		"@stencil/core": "4.38.3",
		"@stencil/sass": "^3.2.3",
		"@types/node": "^24.10.1",
		"@types/showdown": "^2.0.6",
		"@typescript-eslint/eslint-plugin": "^8.48.1",
		"@typescript-eslint/parser": "^8.48.1",
		"@vitest/browser": "^4.0.15",
		"@vitest/browser-webdriverio": "^4.0.15",
		"@vitest/coverage-istanbul": "^4.0.15",
		"eslint": "^8.56.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20231004",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"prettierx": "github:utily/prettierx#utily-20231004",
		"stencil-router-v2": "^0.6.0",
		"typescript": "5.9.3"
	}
}
