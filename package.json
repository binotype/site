{
	"name": "@binotype/site",
	"version": "0.0.1-alpha.0",
	"license": "MIT",
	"description": "Component library for building Binotype web sites.",
	"main": "dist/index.cjs.js",
	"module": "dist/index.js",
	"types": "dist/types/index.d.ts",
	"collection": "dist/collection/collection-manifest.json",
	"collection:main": "dist/collection/index.js",
	"unpkg": "dist/binotype/binotype.esm.js",
	"exports": {
		".": {
			"import": "./dist/binotype/binotype.esm.js",
			"require": "./dist/binotype/binotype.cjs.js"
		},
		"./binotype-site": {
			"import": "./dist/components/binotype-site.js",
			"types": "./dist/components/binotype-site.d.ts"
		},
		"./loader": {
			"types": "./loader/index.d.ts",
			"import": "./loader/index.js",
			"require": "./loader/index.cjs"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/binotype/site.git"
	},
	"bugs": {
		"url": "https://github.com/binotype/site/issues"
	},
	"homepage": "https://github.com/binotype/site/",
	"private": false,
	"files": [
		"dist/",
		"loader/"
	],
	"scripts": {
		"build": "stencil build",
		"start": "stencil build --dev --watch --serve",
		"test": "vitest --run",
		"test.watch": "vitest --watch",
		"generate": "stencil generate",
		"lint": "eslint src --ext .ts,.tsx",
		"format": "prettierx --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
		"verify": "npm run lint && npm run build && npm run test"
	},
	"devDependencies": {
		"@stencil/core": "4.38.3",
		"@stencil/sass": "^3.2.3",
		"@types/node": "^24.10.1",
		"@types/showdown": "^2.0.6",
		"@typescript-eslint/eslint-plugin": "^8.48.1",
		"@typescript-eslint/parser": "^8.48.1",
		"@vitest/browser": "^4.0.15",
		"@vitest/browser-webdriverio": "^4.0.15",
		"@vitest/coverage-istanbul": "^4.0.15",
		"eslint": "^8.56.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20231004",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"happy-dom": "^20.0.11",
		"jsdom": "^27.0.1",
		"prettierx": "github:utily/prettierx#utily-20231004",
		"stencil-router-v2": "^0.6.0",
		"typescript": "5.9.3"
	},
	"dependencies": {
		"isly": "^1.4.0",
		"isoly": "^3.1.4",
		"tidily": "^0.2.6",
		"unplugin-stencil": "^0.4.1",
		"vite": "^6.4.1",
		"vitest": "^4.0.15",
		"webdriverio": "^9.21.0"
	}
}
