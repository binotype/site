{
	"name": "@binotype/site",
	"version": "0.21.0",
	"license": "MIT",
	"private": false,
	"description": "Component library for building Binotype web sites.",
	"type": "module",
	"main": "dist/index.cjs.js",
	"module": "dist/index.js",
	"es2015": "dist/esm/index.js",
	"es2017": "dist/esm/index.js",
	"types": "dist/components/index.d.ts",
	"collection": "dist/collection/collection-manifest.json",
	"collection:main": "dist/collection/index.js",
	"unpkg": "dist/binotype/binotype.esm.js",
	"exports": {
		".": {
			"import": "./dist/components/index.js",
			"types": "./dist/components/index.d.ts"
		},
		"./components": {
			"import": "./dist/components/index.js",
			"types": "./dist/components/index.d.ts"
		},
		"./binotype-site": {
			"import": "./dist/components/binotype-site.js",
			"types": "./dist/components/binotype-site.d.ts"
		},
		"./collection": {
			"import": "./dist/collection/index.js",
			"types": "./dist/collection/index.d.ts"
		},
		"./hydrate": {
			"import": "./dist/hydrate/index.js",
			"types": "./dist/hydrate/index.d.ts"
		},
		"./loader": {
			"import": "./dist/loader/index.js",
			"types": "./dist/loader/index.d.ts"
		},
		"./polyfill": {
			"import": "./dist/polyfill-loader.js",
			"types": "./dist/polyfill-loader.d.ts"
		}
	},
	"files": [
		"dist/"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/binotype/site.git"
	},
	"bugs": {
		"url": "https://github.com/binotype/site/issues"
	},
	"homepage": "https://github.com/binotype/site/",
	"scripts": {
		"build": "stencil build --prerender",
		"start": "stencil build --dev --watch --serve --prerender",
		"test": "stencil test --spec --e2e",
		"test.watch": "stencil test --spec --e2e --watch",
		"generate": "stencil generate",
		"lint": "eslint src/**/*.{ts,tsx}",
		"format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
		"verify": "npm run lint && npm run build && npm run test"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.4",
		"@eslint/js": "^10.0.1",
		"@stencil/core": "4.43.1",
		"@stencil/sass": "3.2.3",
		"@types/jest": "^29.5.14",
		"@types/node": "25.3.0",
		"@types/showdown": "^2.0.6",
		"@typescript-eslint/eslint-plugin": "^8.56.1",
		"@typescript-eslint/parser": "^8.56.1",
		"eslint": "^10.0.2",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"jest": "^29.7.0",
		"prettier": "^3.8.1",
		"puppeteer": "^24.37.5",
		"sass": "1.97.3",
		"stencil-inline-svg": "1.1.0",
		"stencil-router-v2": "^0.6.0",
		"typescript": "5.9.3",
		"unplugin-stencil": "^0.4.1"
	},
	"dependencies": {
		"isly": "^1.7.0",
		"isoly": "^3.1.8",
		"tidily": "^0.2.7"
	}
}
